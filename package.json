{
  "private": true,
  "version": "1.4.0",
  "license": "MIT",
  "description": "A dev-oriented web3 wallet",
  "scripts": {
    "app:dev": "rm -rf target/debug/db.*; RUST_LOG=iron=debug tauri dev",
    "gui:build": "bun run --cwd gui build",
    "storybook": "bun run --cwd packages/react storybook",
    "ext:dev": "bun run --cwd extension dev",
    "ext:build": "bun run --cwd extension \"$@\"",
    "lint": "bun run lint:eslint && bun run lint:tsc && bun run lint:prettier",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit",
    "lint:prettier": "prettier --check .",
    "fix": "bun run fix:eslint && bun run fix:prettier",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier --write .",
    "setup": "bun run install && bun run ext:build"
  },
  "workspaces": [
    "extension",
    "packages/react",
    "packages/types",
    "packages/data",
    "gui"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "assert": "^2.1.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^42.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "@tauri-apps/cli": "^1.5.7",
    "typescript": "5.3.3"
  },
  "resolutions": {
    "postcss": "^8.4.31"
  }
}
